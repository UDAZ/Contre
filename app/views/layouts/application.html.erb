<!DOCTYPE html>
<html>
  <head>
    <title>Contre</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <%= link_to 'こんとる', root_path, class: 'navbar-brand' %>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav ml-auto">
          <% if user_signed_in? %>
            <li class="nav-item">
              <%= link_to '投稿一覧', posts_path, class: 'nav-link' %>
            </li>
            <li class="nav-item">
              <%= link_to 'ランキング', users_path, class: 'nav-link' %>
            </li>
            <li class="nav-item">
              <%= link_to 'ユーザーページ', user_path(current_user), class: 'nav-link' %>
            </li>
            <% if unchecked_notifications.any? %>
                <i class="fa fa-circle" style="color: gold;"></i>
            <% end %>
            <li class="nav-item">
                <%= link_to "NOTICE", notifications_path, class: "nav-link" %>
            </li>
            <li class="nav-item">
              <%= link_to 'ログアウト', destroy_user_session_path, class: 'nav-link', method: :delete %>
            </li>
          <% else %>
            <li class="nav-item">
              <%= link_to '投稿一覧', posts_path, class: 'nav-link' %>
            </li>
            <li class="nav-item">
              <%= link_to 'ランキング', users_path, class: 'nav-link' %>
            </li>
            <li class="nav-item">
              <%= link_to 'About', about_path, class: 'nav-link' %>
            </li>
            <li class="nav-item">
              <%= link_to "githubで登録・ログイン", user_github_omniauth_authorize_path, class: 'nav-link', method: :post %>
            </li>
          <% end %>
          </ul>
        </div>
      </nav>
    </header>
    <main>
      <div class="container">
        <div class="row">
          <% if notice.present? %>
            <div class="alert alert-secondary col-12 mt-2"><%= notice %></div>
          <% end %>
          <%= yield %>
        </div>
      </div>
    </main>
    <footer>
      
    </footer>
  </body>
</html>
