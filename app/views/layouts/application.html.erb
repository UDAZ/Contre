<!DOCTYPE html>
<html>
  <head>
    <title>Contre</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <a class="navbar-brand" href="#">こんとる</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav ml-auto">
          <% if user_signed_in? %>
            <li class="nav-item">
              <a class="nav-link" href="#">投稿一覧</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="#">ランキング</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="#">ユーザーページ</a>
            </li>
            <li class="nav-item">
              <%= link_to 'ログアウト', destroy_user_session_path, class: 'nav-link', method: :delete %>
            </li>
          <% else %>
            <li class="nav-item">
              <a class="nav-link" href="#">投稿一覧</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="#">ランキング</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="#">About</a>
            </li>
            <li class="nav-item">
              <%= link_to "githubで登録・ログイン", user_github_omniauth_authorize_path, class: 'nav-link', method: :post %>
            </li>
          <% end %>
          </ul>
        </div>
      </nav>
    </header>
    <main>
      <%= yield %>
    </main>
    <footer>
      
    </footer>
  </body>
</html>
