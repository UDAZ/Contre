<div class="col-12 mt-3">
  <h4 class="display-5"><i class="fas fa-book mr-2"></i>User / <%= @user.name %></h4>
</div>
<div class="col-12 col-lg-4">
  <div class="card mt-3 h-100">
    <div class="card-body">
      <div class="d-flex justify-content-center">
        <h4 class="card-title">Image</h4>
      </div>
      <div class="d-flex justify-content-between">
        <h4 class="card-title">Name</h4>
        <h4 class="card-title"><%= @user.name %></h4>
      </div>
      <div class="d-flex justify-content-between">
        <h4 class="card-title">Contributions</h4>
        <h4 class="card-title"><%= @user.contributions %></h4>
      </div>
      <span id="relation">
        <%= render partial: 'relationships/relationship', locals: {user: @user} %>
      </span>
      <% if @user == current_user %>
        <div class="d-flex justify-content-between my-1">
          <%= link_to "Update Contributions", edit_user_path(@user.id), class: "btn btn-outline-dark w-100"%>
        </div>
        <div class="d-flex justify-content-between my-1">
          <%= link_to "New Post", new_post_path, class: "btn btn-outline-dark w-100"%>
        </div>
      <% end %>
    </div>
  </div>
</div>
<div class="col-12 col-lg-8">
  <div class="card mt-3 h-100">
    <div class="card-body">
      <div class="d-flex justify-content-center">
        <h4 class="card-title">Posts</h4>
      </div>
      <table class="table">
        <thead class="thead-light">
          <tr>
            <th>Genre</th>
            <th>Title</th>
          </tr>
        </thead>
        <tbody>
          <% @posts.each do |post| %>
            <tr>
              <td><%= post.genre.name %></td>
              <td><%= link_to post_path(post) do %><%= post.title %><% end %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <%= paginate @posts %>
    </div>
  </div>
</div>