<div class="d-flex justify-content-between">
  <h4 class="card-title"><%= t'relation.follows'%></h4>
  <h4 class="card-title"><%= link_to "#{user.follower.count}", user_follows_path(user.id) %></h4>
</div>
<div class="d-flex justify-content-between">
  <h4 class="card-title"><%= t'relation.followers'%></h4>
  <h4 class="card-title"><%= link_to "#{user.followed.count}", user_followers_path(user.id) %></h4>
</div>
<div class="d-flex justify-content-between my-1">
  <%= link_to "#{t'relation.vg'}", "#{user.github_url}", class: "btn btn-dark w-100"%>
</div>
<% if user_signed_in? %>
  <% unless user == current_user %>
    <div class="d-flex justify-content-between my-1">
      <% if current_user.following?(user) %>
        <%= link_to "#{t'relation.unfollow'}", unfollow_path(user.id), class: "btn btn-outline-dark w-100", method: :POST, remote: true %>
      <% else %>
        <%= link_to "#{t'relation.follow'}", follow_path(user.id), class: "btn btn-outline-dark w-100", method: :POST, remote: true %>
      <% end %>
    </div>
  <% end %>
<% end %>