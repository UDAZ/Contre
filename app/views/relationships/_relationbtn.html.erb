<td><%= link_to "#{user.name}", user_path(user) %></td>
<td><%= link_to "#{user.follower.count}", user_follows_path(user), class: "followcount" %></td>
<td><%= link_to "#{user.followed.count}", user_followers_path(user), class: "followercount" %></td>
<td class="p-1">
  <% if user_signed_in? %>
    <% unless user == current_user %>
      <% if current_user.following?(user) %>
        <%= link_to "#{t'relation.unfollow'}", unfollow_path(user), class: "btn btn-outline-dark", method: :POST, remote: true %>
      <% else %>
        <%= link_to "#{t'relation.follow'}", follow_path(user), class: "btn btn-outline-dark", method: :POST, remote: true %>
      <% end %>
    <% end %>
  <% end %>
</td>
