<% if user_signed_in? %>
  <% if post.reported_by?(current_user) %>
    <p class="text-black-50"><%= t'report.reported' %></p>
  <% else %>
    <a id="repo" class="text-black-50"><i class="fa fa-flag"></i><%= t'report.sendreport' %></a>
    <div class="modal js-modal">
      <div class="modal_bg js-modal-close"></div>
        <div class="modal_content col-10 col-lg-6">
          <i class="fa fa-times-circle text-white js-modal-close" aria-hidden="true"></i>
          <div class="d-flex justify-content-center">
            <h4 class="card-title"><%= t'report.report' %></h4>
          </div>
          <%= form_with url: post_reports_path(post), local:true do |f| %>
            <div class="alert alert-dark" role="alert">
              <%= t'report.reportnote' %>
            </div>
            <div class="form-group">
              <%= f.label "#{t'activerecord.attributes.report.description'}" %>
              <%= f.text_area :description, class: 'form-control' %>
            </div>
            <div class="form-group">
              <%= f.submit "#{t'report.send'}", class: 'btn btn-dark' %>
            </div>
          <% end %>
        </div>
      </div>
  <% end %>
<% else %>
<% end %>
