<% if user_signed_in? %>
  <% if post.reported_by?(current_user) %>
    <p class="text-black-50">通報済みです。</p>
  <% else %>
    <a id="repo" class="text-black-50"><i class="fa fa-flag"></i>通報する</a>
    <div class="modal js-modal">
  <div class="modal_bg js-modal-close"></div>
  <div class="modal_content col-10 col-lg-6">
    <i class="fa fa-times-circle text-white js-modal-close" aria-hidden="true"></i>
    <div class="d-flex justify-content-center">
      <h4 class="card-title">通報</h4>
    </div>
    <%= form_with url: post_reports_path(post), local:true do |f| %>
      <div class="alert alert-dark" role="alert">
        通報を送信しますと運営部が通報詳細を確認し、必要な対応を行います。対応にはお時間を頂く場合がございますので予めご了承ください。
      </div>
      <div class="form-group">
        <%= f.label :description, "通報詳細"%>
        <%= f.text_area :description, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.submit "送信", class: 'btn btn-dark' %>
      </div>
    <% end %>
  </div>
</div>
  <% end %>
<% else %>
<% end %>